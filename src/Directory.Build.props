<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="17.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />
  <PropertyGroup Label="Compilation">
    <IsTestProject>false</IsTestProject>
    <OutputType>Library</OutputType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DefineTrace>true</DefineTrace>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup Label="Code Analysis">
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
  </PropertyGroup>
  <PropertyGroup Label="Assembly Signing">
    <SignAssembliesAndPackage>false</SignAssembliesAndPackage>
  </PropertyGroup>
  <Import Project="$([MSBuild]::GetPathOfFileAbove('signing.props', '$(MSBuildThisFileDirectory)../'))" Condition="$([MSBuild]::GetPathOfFileAbove('signing.props', '$(MSBuildThisFileDirectory)../')) != ''" />
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <SignAssembliesAndPackage>false</SignAssembliesAndPackage>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <CreateGitHubZip>false</CreateGitHubZip>
    <DefineDebug>true</DefineDebug>
    <DebugType>Full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <SignAssembliesAndPackage>false</SignAssembliesAndPackage>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <CreateGitHubZip>true</CreateGitHubZip>
    <DefineDebug>false</DefineDebug>
    <DebugType>Portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Label="NuGet package settings">
    <IsPackable>true</IsPackable>
    <PackageOutputPath>$(ArtifactsPath)/NuGet/$(Configuration)/</PackageOutputPath>
    <MinClientVersion>4.9</MinClientVersion>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Authors>Daniel Kopp</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>NerdyDuck.CodedExceptions-128x128.png</PackageIcon>
    <PackageProjectUrl>https://github.com/NerdyDuck/NerdyDuck.CodedExceptions</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>
  <PropertyGroup Label="Github Release Zips">
    <ZipOutputPath>$(ArtifactsPath)/Zip/</ZipOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NuGet.Build.Tasks.Pack">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Label="NuGet package icon">
    <None Include="$(MSBuildThisFileDirectory)../media/NerdyDuck.CodedExceptions-128x128.png" Pack="true" PackagePath="\">
      <Link>NerdyDuck.CodedExceptions-128x128.png</Link>
    </None>
  </ItemGroup>
  <ItemGroup Label="Global code">
    <Compile Include="$(MSBuildThisFileDirectory)../shared/CompositeFormatCache.cs" />
  </ItemGroup>
</Project>
