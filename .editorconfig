# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 2 spaces as indentation
# Trim trailing whitespace
[*]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.cs]
indent_style = tab
indent_size = 4

[*.xaml]
indent_style = tab
indent_size = 4

[app.config]
indent_style = tab
indent_size = 4

[*.csproj]
indent_size = 2

[*.nuspec]
indent_style = tab
indent_size = 4
